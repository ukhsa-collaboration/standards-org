{
  "name": "@ukhsa-collaboration/standards-org",
  "version": "0.0.1",
  "description": "UKHSA Organisation Standards",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "scripts": {
    "build": "npx eleventy",
    "fetch": "node src/build/obtain-docs.js",
    "prepare": "husky && git config commit.template .gitmessage",
    "start": "npx eleventy --serve --watch",
    "test": "node --test",
    "test:container": "node --test --test-name-pattern 'container image tests'",
    "test:coverage": "node --test --experimental-test-coverage",
    "test:eleventy": "node --test --test-skip-pattern 'container image tests'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukhsa-collaboration/standards-org.git"
  },
  "homepage": "https://ukhsa-collaboration.github.io/standards-org/",
  "keywords": [
    "guidance",
    "standards",
    "documentation",
    "eleventy",
    "ukhsa"
  ],
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@x-govuk/govuk-eleventy-plugin": "^8.0.3",
    "github-slugger": "^2.0.0",
    "mermaid": "^11.11.0",
    "titlecase": "^1.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "fs-extra": "^11.3.1",
    "husky": "^9.1.7",
    "testcontainers": "^11.5.1"
  }
}
